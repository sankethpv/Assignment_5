syms t w
%input signalk x(t)
x=(cos(2*3.14*100*t) + cos(2*3.14*500*t)).*heaviside(t);
subplot(3,1,1);
ezplot(x);
title("input signal")
% fourier transform
disp("The fourier transform of x(t) is")
X=fourier(x);
X=simplify(X);
% frequency response
subplot(3,1,2);
ezplot(abs(X));
title("Magnitude response of Fourier transform")
subplot(3,1,3);
ezplot(atan((imag(X))/(real(X))))
title("Phase response of fourier transform")
